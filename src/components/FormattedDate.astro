---
interface Props {
	date: string | Date; // Allow both string and Date types
}

const { date } = Astro.props;
const formattedDate = new Date(date); // Ensure it's a Date object
---

<time datetime={formattedDate.toISOString()}>
	{
		formattedDate.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
